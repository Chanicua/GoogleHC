<Window x:Class="MMMFrameworkTemplate.MultiPointWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controlesDllEspecificos="clr-namespace:MultiPointControl_DLL.Controls;assembly=MultiPointControl_DLL"
    Title="MMM Template" ResizeMode="NoResize" WindowStyle="None" WindowState="Maximized">
    <Grid Name="gridMultiPoint" ShowGridLines="True">
    	<Grid.RowDefinitions>
    		<RowDefinition Height="0.25*"/>
    		<RowDefinition Height="0.75*"/>
    	</Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="815*" />
            <ColumnDefinition Width="210*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" x:Name="gameGrid" ShowGridLines="True"/>
        <controlesDllEspecificos:ContenedorBarras Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" x:Name="barContainer"/>
    </Grid>
</Window>
