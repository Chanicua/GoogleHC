<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" x:Class="MMMFrameworkTemplate.KidBox"
    xmlns:controlesDll="clr-namespace:MultiPointControl_DLL.Controls.BasicControls;assembly=MultiPointControl_DLL"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="mainGrid">
    	<Grid.RowDefinitions>
    		<RowDefinition Height="0.1*"/>
    		<RowDefinition Height="0.3*"/>
    		<RowDefinition Height="0.3*"/>
    		<RowDefinition Height="0.3*"/>
    		<RowDefinition Height="0.1*"/>
    	</Grid.RowDefinitions>
    	<Grid.ColumnDefinitions>
    		<ColumnDefinition Width="0.1*"/>
    		<ColumnDefinition Width="0.3*"/>
    		<ColumnDefinition Width="0.3*"/>
    		<ColumnDefinition Width="0.3*"/>
    		<ColumnDefinition Width="0.1*"/>
    	</Grid.ColumnDefinitions>
		<Image Grid.Column="1" Grid.Row="1" x:Name="feedbackImage" Margin="5,5,5,5"/>
		<!-- EJEMPLO -->
        <controlesDll:MultiPointLabel Grid.Column="3" Grid.Row="3" x:Name="buttonExample" Grid.RowSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </Grid>
</UserControl>
